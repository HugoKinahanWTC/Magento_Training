<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title"
                          xsi:type="string">Hugo Layout Test
                </argument>
            </action>
        </referenceBlock>

        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="test_page_layout"
                   template="Unit3_TestLayout::testpage.phtml">
                <arguments>
                    <argument name="background_color" xsi:type="string">red
                    </argument>
                    <argument name="color" xsi:type="string">lightskyblue</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
